<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entities.Persona" table="personas">
        <id name="id" type="integer" column="id">
            <generator class="identity"/>
        </id>
        <property name="nombre" type="string" column="nombre" length="50"/>
        <property name="edad" type="integer" column="edad" />
        <property name="fechaNacimiento" type="date" column="fecha_nacimiento"/>
    </class>
</hibernate-mapping>
